{
  "name": "pdf-service-node",
  "version": "1.0.0",
  "description": "Service for generating and downloading PDFs",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:bundle",
    "test:unit": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest tests/utils.test.js --runInBand",
    "test:api": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest tests/api.test.js --runInBand",
    "test:integration": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest tests/integration.test.js --runInBand",
    "test:all": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest --runInBand --verbose",
    "test:watch": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest --runInBand --watch",
    "test:coverage": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest --runInBand --coverage",
    "test:bundle": "node tests/run-tests.js",
    "test:bundle:watch": "nodemon --watch routes --watch tests --exec 'npm run test:bundle'",
    "test:scenario": "node tests/run-tests.js",
    "test:bundleHtml2PDF": "node tests/bundleHtml2PDF-runner.js",
    "test:bundleHtml2PDF:jest": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest tests/bundleHtml2PDF.test.js --runInBand"
  },
  "author": "r.moghbel",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsdom": "^26.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.5",
    "puppeteer": "^23.7.1",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  }
}
